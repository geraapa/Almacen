@model IEnumerable<AlmacenSistemaTG.Models.Marca>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-info" style="margin-top: 10px;">
    <div class="panel-heading">
        <h4>Catálogo de Marcas</h4>
    </div>
    <div class="panel-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-striped">
            <tr>
                <th>
                    Descripción@*@Html.DisplayNameFor(model => model.vchDescripcion)*@
                </th>
                <th>
                    Clave@*@Html.DisplayNameFor(model => model.vchClave)*@
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.vchDescripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.vchClave)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.iIdMarca }) |
                        @Html.ActionLink("Details", "Details", new { id = item.iIdMarca }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.iIdMarca })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>



